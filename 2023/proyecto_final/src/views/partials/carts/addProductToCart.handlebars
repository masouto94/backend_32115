<h2>Add product to cart</h2>

<form  id="updateCartForm">

    <select name="productToModify" id="productToModify">
    {{#each products}}
    <option value={{this._id}}>{{this.title}}</option>
    {{/each}}
    <input id="prodQuantity" type="number" name="prodQuantity" placeholder="Product quantity. Leave blank to add one">
    <input id="updateCart" type="submit" value="Update Cart">
</form>